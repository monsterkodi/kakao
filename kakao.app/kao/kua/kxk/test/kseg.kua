
use kxk/kxk
use kxk/strg

▸ kseg

    ▸ static
    
        kseg.rep(4)∙str() ▸ "    "
        kseg.rep(4 'x')∙str() ▸ "xxxx"
        kseg.rep(2 'xy')∙str() ▸ "xyxy"

        kseg.segiAtWidth kseg('')    1 ▸ 0
        kseg.segiAtWidth kseg('a')   1 ▸ 1
        kseg.segiAtWidth kseg('a')   2 ▸ 1
        kseg.segiAtWidth kseg('abc') 2 ▸ 2
        kseg.segiAtWidth kseg('ab3') 3 ▸ 3
        kseg.segiAtWidth kseg('ab3') 4 ▸ 3
        
        kseg.segiAtWidth kseg('🧑🧑') 1 ▸ 1
        kseg.segiAtWidth kseg('🧑🧑') 2 ▸ 1
        kseg.segiAtWidth kseg('🧑🧑') 3 ▸ 2
        kseg.segiAtWidth kseg('🧑🧑') 4 ▸ 2
        kseg.segiAtWidth kseg('🧑🧑') 5 ▸ 2
        kseg.segiAtWidth kseg('🧑🧑') 6 ▸ 2  
        
    ▸ construct
        
        s = kseg()
        s∙str() ▸ ""
        s = kseg("  ")
        s∙str() ▸ "  "
        s = kseg(kseg("xx"))
        s∙str() ▸ "xx"
        s = kseg(kseg(kseg("yy")))
        s∙str() ▸ "yy"
        st = strg("zz")
        s = kseg(strg("zz"))
        s∙str() ▸ "zz"
        
    ▸ find
        
        s = "a  b"
        s∙find " "  ▸ 2
        s∙find "  " ▸ 2
        s∙find " b" ▸ 3
        s∙find "b"  ▸ 4

    ▸ pop
    
        s = kseg "../"
        s∙pop()
        s∙str() ▸ ".."
        
        s = kseg "◂▸○●"
        s∙pop()
        s∙str() ▸ "◂▸○"
        s∙pop()
        s∙str() ▸ "◂▸"
        
    ▸ push
    
        s = kseg()
        s.len ▸ 0
        s∙push "●"
        s∙str() ▸ "●"
        s.len ▸ 1
        s∙push "▪"
        s∙str() ▸ "●▪"
        s.len ▸ 2
        s∙push " "
        s∙str() ▸ "●▪ "
        s.len ▸ 3
    
    ▸ rpad
        
        s = kseg "▴"
        s∙rpad 2
        s∙str() ▸ "▴ "
        s∙rpad 4
        s∙str() ▸ "▴   "
        s∙rpad 2
        s∙str() ▸ "▴   "
        
    ▸ trim
    
        s = kseg " ▴  "
        s∙trim()
        s∙str() ▸ "▴"
        
        s = kseg " ▴  "
        s∙rtrim()
        s∙str() ▸ " ▴"

        s = kseg " ▴  "
        s∙ltrim()
        s∙str() ▸ "▴  "

        s = kseg "\n\n ▴  \n  \n"
        s∙trim()
        s∙str() ▸ "▴"
        
    ▸ emojii
    
        s = kseg "🧑"
        s.len ▸ 1
        
        s = kseg "🧑‍🌾"
        s.len ▸ 3
        s[^1] ▸ "🌾"
        s∙pop()
        s∙pop()
        s.len ▸ 1
        s∙str() ▸ "🧑"
        
    ▸ is
    
        a = kseg ""
        a∙is kseg  ▸ true
        a∙is array ▸ true
        a∙is table ▸ false
        a∙is false ▸ false
        a∙is true  ▸ false
        a∙is nil   ▸ false
        