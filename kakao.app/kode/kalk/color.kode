use ../kxk ▪ matchr

class Color

    @: ->
        
        cfg = 
            '0x':   'hex'
            '[abcdef]': 'digit'
            '=': 'equals'
            'e[-+]': 'exponent'
            '[\\.]': 'dot'
            '[\\(\\)]': 'bracket'
            '\\d+': 'digit' 
            '°': 'digit' 
            'i': 'complex'
            '(sin|cos|a?tan|exp|log|hex)': 'function'
            'NaN': 'nan'
            '[π∞ϕ]': 'constant'
            '[∡√^]': 'op0'
            '[*/]': 'op1'
            '[+-]': 'op2'
            
        cfg[symbol.euler] = 'constant'
            
        @config = matchr.config cfg
    
    colorize: text => 
        
        rngs = matchr.ranges @config, text
                
        colorized = ''
        index = 0
        for rng in rngs
            while index < rng.start
                index += 1
                colorized += "&nbsp;"
            if index > rng.start
                continue
            clss = rng.clss ? 'text'
            colorized += "<span class=\"#{clss}\">#{rng.match}</span>"
            index = rng.start + rng.match.length
        while index < text.length
            index += 1
            colorized += "&nbsp;"
        return colorized

export (new Color()).colorize
