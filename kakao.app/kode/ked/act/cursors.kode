use ../util ◆ util

export

    allCursors: -> 
        
        cursors = @s.cursors.asMutable()
        cursors.push @s.cursor.asMutable()
        util.normalizePositions cursors @s.lines.length-1
    
    expandCursors: dir ->
        
        cursors = @allCursors()

        dy = dir == 'up' ? -1 : 1
        
        newCursors = []
        for c in cursors
            newCursors.push [c[0] c[1]+dy]

        cursors = cursors.concat newCursors
        
        @set 'cursors' cursors
        
    addCursor: x y ->
        
        pos = util.pos x y
        cursors = @allCursors()
        @setCursor pos
        cursors.push pos
        @set 'cursors' cursors
        
    moveCursor: dir steps=1 ->
        
        @deselect()
        
        cursors = @allCursors()
        
        for c in cursors
            switch dir
                'left'  ➜ c[0] -= 1
                'right' ➜ c[0] += 1
                'up'    ➜ c[1] -= steps
                'down'  ➜ c[1] += steps 
                'eol'   ➜ c[0] = @s.lines[c[1]].length
                'bol'   ➜ c[0] = 0
                'eof'   ➜ c[1] = @s.lines.length-1; c[0] = @s.lines[c[1]].length
        
        @setCursor cursors[-1]
        @set 'cursors' cursors
        
        
        

