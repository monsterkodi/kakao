onCombo = (combo, info) ->

    ⮐ stopEvent(info.event) if 'unhandled' != window.keys.globalModKeyComboEvent info.mod, info.key, info.combo, info.event
    
    switch combo
        'ctrl+v' ➜ ⮐ paste()
        'ctrl+c' ➜ ⮐ cpy()
        'ctrl+x' ➜ ⮐ cut()
        
post.on 'combo' onCombo
        
