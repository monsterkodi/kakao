use ◆ theme cells

function gutter

    @: screen @state ->
        
        @cells = new cells screen
        
    draw: ->
        
        for row in 0...@cells.rows
                        
            y = @state.s.view[1] + row
            lineno = lpad @cells.cols-1 y+1
            lineno += ' '
            
            for c,i in lineno
                
                col = i#+1
                if col < @cells.rows
                    
                    fg = if
                        y == @state.s.cursor[1] ➜ theme.cursor
                        @state.isSelectedLine y ➜ theme.selection
                                                ➜ theme.linenr
                                                
                    bg = if 
                        @state.isSelectedLine y ➜ theme.gutter_sel
                                                ➜ theme.gutter
                    
                    @cells.set col row (y<@state.s.lines.length) ? c : ' ' fg bg

export gutter