str.encode = (s, spaces=true) ->

    if s
        r = encodeURI s
        if spaces
            r = r.replace /\s/g, '&nbsp;'
        r
    else
        ''

ESCAPE_REGEXP = /[\-\\\^\$\*\+\?\.\(\)\|\[\]\{\}\/]/g

str.escapeRegexp = (s) -> s.replace ESCAPE_REGEXP, '\\$&'
