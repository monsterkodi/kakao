currentSelection = ->
    
    selection = document.getSelection().toString()
    ⮐ selection if valid selection
    ''
    
cpy = ->
    if selection = currentSelection()
        # electron.clipboard?.writeText selection
        kakao 'clipboard.write' selection
    else
        # electron.clipboard?.writeText window.input.text()
        kakao 'clipboard.write' window.input.text()

cut = -> 
    cpy() 
    if selection = currentSelection()
        document.getSelection().deleteFromDocument()
    else
        window.input.clear()
        
paste = ○->
    
    # electron.clipboard?.readText()
    
    text =○ kakao 'clipboard.read' 
    
    window.input.setText window.input.text()+text

