    @insertTextAtPositions: lines text posl ->
                          
        ⮐  (lines posl) if empty text
        
        if text == '\t'
            pos  = posl[1]
            text = kstr.lpad 4-pos[1]%4 ' '
            
        text   = kstr.detab text
        txtls  = belt.seglsForText text
        newls  = []                
        newpl  = []                
        rngs   = belt.rangesForLinesSplitAtPositions lines posl
        before = []
        
        for idx rng in ipairs rngs
            
            after = belt.seglsForRange lines rng
            
            if empty after or empty after[1]
                if posl[^1][2] >= lines.len
                    before∙push [] 
            
            if idx > 1
                x = posl[idx-1][1]
                
                if valid before ➜ line = before∙pop()
                else              line = newls∙pop() 
                
                write "x" x, kseg.width(line), line
                
                if x > kseg.width(line) and text != '\n'
                    line += kstr.split kstr.lpad(x-line.len) ''
                                        
                if txtls.len > 1
                    
                    if posl.len > 1 and text != '\n'
                        insertLineIndex = (idx-1) % txtls.len
                        before∙push line + txtls[insertLineIndex]
                        newpl∙push [kseg.width(before[^1]) newls.len+before.len-1]
                        before∙push before∙pop() + after∙shift()
                    else
                        posLineIndent = belt.numIndent line
                        indent = kseg(kstr.lpad(posLineIndent))
                        before∙push line + txtls[1]
                        
                        for lidx insl in ipairs txtls∙slice(1)
                            if lidx < txtls.len-2 or valid insl or text == '\n'
                                before∙push indent + insl
                    
                        if x > posLineIndent
                            newpl∙push [kseg.width(before[^1]) newls.len+before.len-1]
                            before∙push before∙pop() + after∙shift()
                        else
                            after∙unshift indent + after∙shift()
                            before∙pop() if text == '\n'
                            newpl∙push [kseg.width(indent) newls.len+before.len] 
                        
                    newls += before
                            
                else
                    newpl∙push [kseg.width(line)+kseg.width(txtls[1]) newls.len+before.len]
                    line  += txtls[1]
                    line  += after∙shift()
                    newls += before      
                    newls∙push line                  
            
            before = after
            
        if posl.len >= 1 and posl[^1][2] <= lines.len
            newls += before 
        # write "AFTER INSERT" newls, newpl
        (newls newpl)
        
