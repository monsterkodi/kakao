use ../../kxk ▪ kstr post
use ../util ◆ theme help util 
use ../edit ◆ editor 
use         ◆ view

int = parseInt

function greeter extends view

    @: screen ->
        
        super screen 'greeter'
        
        @header  = help.headerCells()
        @name    = 'greeter'
        @a       = 0

    #  0000000  000   000   0000000   000   000
    # 000       000   000  000   000  000 0 000
    # 0000000   000000000  000   000  000000000
    #      000  000   000  000   000  000   000
    # 0000000   000   000   0000000   00     00

    show: doShow=true =>
        
        ⮐ @hide() if doShow == false
        
    layout: x y ->
        
        [w h] = util.cellSize @header
        
        @cells.layout x y w h

    # 0000000    00000000    0000000   000   000
    # 000   000  000   000  000   000  000 0 000
    # 000   000  0000000    000000000  000000000
    # 000   000  000   000  000   000  000   000
    # 0000000    000   000  000   000  00     00

    draw: =>
        
        ⮐ if @hidden()
        
        @show()
        
        duration = 240
        @a += 1
        @a = 0 if @a > duration
        f = 0.75 + 0.25 * Math.cos(2 * Math.PI * (1-@a/duration))
        
        c1 = [0 int(f * 255) 0]
        c2 = [int(f * 120) int(f * 120) int(f * 255)]
        c3 = [int(f * 255) int(f * 160) 0]
        
        @header = help.headerCells c1 c2 c3
        
        for row,y in @header
            for cell,x in row
                @cells.set x y cell.char cell.fg cell.bg
                
        post.emit 'redraw'

export greeter
