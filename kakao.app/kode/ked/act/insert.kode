use ../../kxk ◆ kstr
use ../util ◆ util

export
    
    # 000  000   000   0000000  00000000  00000000   000000000  
    # 000  0000  000  000       000       000   000     000     
    # 000  000 0 000  0000000   0000000   0000000       000     
    # 000  000  0000       000  000       000   000     000     
    # 000  000   000  0000000   00000000  000   000     000     
    
    insert: text ->
                
        if valid @s.selections
            # ⮐ @indentSelectedLines() if text == '\t'
            @deleteSelection()
                    
        cursors = @allCursors()
        lines   = @allLines()
        
        [lines cursors] = util.insertTextAtPositions lines text cursors
                        
        @clearHighlights()
        @setLines   lines
        @setCursors cursors -1
        
    # 000   000  00000000  000   000  000      000  000   000  00000000  
    # 0000  000  000       000 0 000  000      000  0000  000  000       
    # 000 0 000  0000000   000000000  000      000  000 0 000  0000000   
    # 000  0000  000       000   000  000      000  000  0000  000       
    # 000   000  00000000  00     00  0000000  000  000   000  00000000  
    
    insertNewline: ->
        
        cursors = @allCursors()
        lines   = @allLines()
        
        [lines cursors] = util.breakLinesAtPositions lines cursors

        @setCursors cursors
        @setLines   lines
        