
titlebarHeight        = 30px

fill-xy()
    position            absolute
    left                0
    right               0
    top                 0
    bottom              0

center-xy()
    position            absolute
    left                50%
    top                 50%
    transform           translate(-50%, -50%)

border(c)
    box-sizing          border-box
    border              1px solid c
    
#fps
.fps
    position            absolute
    top                 0
    right               0
    
#main
    overflow            hidden
    
#title
    color               #aaa
    font-family         fontMono
    
#world
    width               100%
    height              100%
    position            relative
    overflow            hidden
    
.gridCanvas
    pointer-events      none
    fill-xy()

#scrollContainer
    text-align          center
    fill-xy()
    overflow            scroll
    
#scrollContent
    display             inline-block

.quiq

    flex                0 1
    display             inline-block
    box-sizing          border-box
    font-size           24px
    font-family         fontMono

.quiq-item

    height              titlebarHeight - 0.5px
    width               titlebarHeight * 1.25
    box-sizing          border-box
    display             inline-block
    text-align          center
    vertical-align      top
    cursor              pointer
    color               #666
    
    &:active
        padding-top     2px
    
::-webkit-scrollbar-corner
    background-color        transparent

::-webkit-scrollbar-thumb
    background-color        #f80
    
::-webkit-scrollbar-thumb:hover
    background-color        #88f
    
        