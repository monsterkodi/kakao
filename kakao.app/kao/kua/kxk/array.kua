    indexof: a s=1 -> array.indexof @ a s
                    
    @indexof: t a s=1 ->
    
        al = array.num a
        sl = array.num t
        
        if sl > 0 and al > 0 and s <= sl-al+1
            for i in s..sl
                match = true
                for j w in a
                    if t[i+j-1] != w 
                        match = false
                        break
                if match
                    ⮐  i
        -1
        
    rindexof: a ->
    
        al = array.num a
        if @len > 0 and al > 0 and al <= @len 
            for i in @len-al+1..1
                match = true
                for w j in array.each(a)
                    if @[i+j-1] != w 
                        match = false
                        break
                if match
                    ⮐  i
        -1

    find: e ->
    
        for i v in @
            if v == e ➜ ⮐  i 
            if v is array and v∙eql(e) ➜ ⮐  i
        -1

    rfind: e ->
    
        if @len > 0
            for i in @len..1
                if @[i] == e ➜ ⮐  i 
                if @[i] is array and @[i]∙eql(e) ➜ ⮐  i
        -1
        
    eql: o ->
        ⮐  false if @len != array.num(o)
        for i v in @
            if v != o[i]
                if v is array
                    if not v∙eql o[i]
                        ⮐  false
                else
                    ⮐  false 
        true
        
    rnd: -> @[math.random(@len)]
    
    sort: f ->
    
        @sort f
        @
    
    swap: i j -> 
    
        ⮐  if i < 1 or i > @len
        ⮐  if j < 1 or j > @len
        ⮐  if i == j 
        (@[i] @[j]) = (@[j] @[i])
        
    shuffle: ->
    
        for i in 1..@len
            @swap i math.random(@len)
        
    has:      e -> @find(e)    >= 1
    contains: e -> @indexof(e) >= 1
    
