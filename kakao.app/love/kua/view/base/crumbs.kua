    draw: ->
        
        ‚Æê  if @hidden()
        ‚Æê  if empty @rounded
            
        colors = []
        for i in 1..@split.len
            if i == @hoverIndex
                colors‚àôpush @color.hover
            else
                colors‚àôpush color.darken(@color.bg 0.4+0.6*(i+1)/@split.length)

        for x in 1..@rounded‚àôlen()
            
            si = @splitIndexAtCol x
            bg = colors[si]
            ch = @rounded[x]
            
            if ch == 'ÓÇ∂' or ch == 'ÓÇ¥'
                fg = bg
                bg = if si > 1 ‚ûú colors[si-1] ‚ûú @color.empty_left
                if x == @rounded‚àôlen()
                    bg = @color.empty_right 
                @cells‚àôset x 1 ch fg bg
            else
                if si == @hoverIndex
                    fg = color.adjustForBackground @color.fg bg 
                elif si < @split.len-1
                    fg = color.darken(@color.fg, min(1, (si+3)/@split.len))
                else
                    fg = color.brighten @color.fg
                
                @cells‚àôset x 1 ch fg bg 
        @render()
                
    #  0000000  00000000   000      000  000000000  000  000   000  0000000    00000000  000   000  
