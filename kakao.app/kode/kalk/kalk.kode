onMenuAction = (action, args) ->

    switch action
        'Cut'       ➜ ⮐ cut()
        'Copy'      ➜ ⮐ cpy()
        'Paste'     ➜ ⮐ paste()
        'Clear All' ➜ post.emit('sheet' 'clear'); post.emit('menuAction' 'Clear')
        'Save'      ➜ post.toMain 'saveBuffer'
        
post.on 'menuAction' onMenuAction
        
window.onresize = -> post.emit 'resize'

