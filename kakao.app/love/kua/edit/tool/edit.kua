    @moveLineRangesAndPositionsAtIndicesInDirection: lines rngs posl indices dir ->
        
        if empty(indices) or dir == 'down' and indices[^1] >= lines.len or dir == 'up' and indices[1] <= 1
            ⮐  (lines rngs posl)
        
        newLines = lines∙map((l) -> l)
        newRngs  = rngs #.asMutable()
        newPosl  = posl #.asMutable()
        
        (rs re) = switch dir
            'down' ➜ (indices.len 1)
            'up'   ➜ (1 indices.len)

        d = switch dir
            'down' ➜ 1
            'up'   ➜ -1
            
        for ii in rs..re
            index = indices[ii]
            
            switch dir 
                'down' ➜ newLines∙splice index   2 newLines[index+1] newLines[index] 
                'up'   ➜ newLines∙splice index-1 2 newLines[index]   newLines[index-1]
                
            for pos in newPosl
                if pos[2] == index 
                    pos[2] += d

            for rng in newRngs
                if rng[2] == index 
                    rng[2] += d
                    rng[4] += d
        
        (newLines newRngs newPosl)

