    splitIndexAtCol: col ->
    
        sl = 0
        for si in 1...@split.len+1
            sl += @split[si].len + 2
            if sl >= col
                ‚Æê  si
        @split.len
        
    colsAtSplitIndex: idx ->
    
        si = 0
        ei = 0
        
        log "colsAtSplitIndex #{idx}" @split, type(@split), @split.len
        for i in 1..idx
            if i < idx
                si += @split[i].len + 2
            ei += @split[i].len + 2
    
        [si ei]
        
    pathAtSplitIndex: idx ->
        # log "PATH AT SPLIT INDEX #{idx}" @split
        # log "PATH AT SPLIT ROOT #{idx}" @root
        path = slash.path unpack(@split‚àôslice(1, idx))
        # path = slash.path @root path
        log "PATH AT SPLIT PATH #{idx}" path
        if string.sub(path 1 1) != "~" and string.sub(path 1 1) != "/"
            path = '/' & path 
        path
        
    #  0000000   0000000          000  000   000   0000000  000000000  
    # 000   000  000   000        000  000   000  000          000     
