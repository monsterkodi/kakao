use ../kxk ◆ fs slash
use ../kode/tester

if process.argv[-1] == 'brief'
    tester.logSections = false

if process.argv[-1] == 'silent'
    tester.logSections = false
    tester.logModules = false

if 1
    log 'kode'
    files =○ fs.list slash.path ◆dir, '../kode/test'
    for file in files
        test =○ import(file.path)
        tester.test test.default

if 1
    log 'kakao'
    files =○ fs.list ◆dir
    for file in files
        continue if file.path == ◆file
        test =○ import(file.path)
        tester.test test.default
        
if 1
    log 'kolor'
    file = slash.path ◆dir, '../kolor/test.js'
    test =○ import(file)
    tester.test test.default
                
tester.summarize()