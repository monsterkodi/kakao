    @cellNeighborsAtPos: cells x y xd=1 yd=1->
        
        [x1 y1 x2 y2] = @clampCellRect cells x-xd y-yd x+xd y+yd
        
        @cellsInRect cells x1 y1 x2 y2
        
export cell
