logFile = ◇string f prefix="" ->

    (dir name ext) = f.relative.dirNameExt()
    d = if dir.len ➜ dir & "/" ➜ ""
    icon = ""
    switch ext 
        ".kim" ➜ icon = "  " 
        ".nim" ➜ icon = "  "
        ".kua" ➜ icon = "  "
        ".lua" ➜ icon = "  "
    color = fgMagenta
    switch ext 
        ".kim" ➜ color = fgGreen 
        ".kua" ➜ color = fgGreen 
               ➜ color = fgMagenta

    styledEcho color prefix styleDim icon resetStyle
               color styleBright d styleBright name resetStyle
        
