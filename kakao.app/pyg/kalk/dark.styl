.key
span
    background          keyColor
    border              none
    white-space         pre
    &.clear
    &.backspace
        color           #800
    &.numbers
    &.digit
        color           #88f
    &.function
        color           #f80
    &.constant
        color           #fc0
    &.op0
        color           #fff
    &.op1
        color           #aaf
    &.op2
        color           #66f
    &.bracket
        color           #333
    &.func
    &.equals
        color           #0a0
    &.dot
    &.exponent
    &.complex
        color           #44a
    
.key
    z-index             1000
    color               scrollColor
    border              2px solid frameColor
    &:hover:not(.inactive)
        background      keyHoverColor
    &:active:not(.inactive)
        background      keyActiveColor

.key:hover:not(.inactive) 
    & .key-wrap
        color           #ddf
        text-shadow     0 0 30px rgba(175,175,255,1), 0 0 60px rgba(0,0,255,1)
        
    &.func .key-wrap
    &.equals .key-wrap
        color           #0f0
        text-shadow     0 0 30px rgba(0,200,0,1), 0 0 60px rgba(0,155,0,1)
        
    &.clear .key-wrap
    &.function .key-wrap
    &.constant .key-wrap
    &.backspace .key-wrap
        color           #ff0
        text-shadow     0 0 30px rgba(205,0,0,1), 0 0 60px rgba(105,0,0,1)
    
    
.key.inactive
    color   bgColor
    