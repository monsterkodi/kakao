    ▸ maxalign
    
        o = { o:1 ooOOoo:2 }
    
        noon.stringify o ▸ """
            o        1
            ooOOoo   2"""
    
        t = { foofoo: {
               barbarbar: 1
               foo: 2 } }
        
        noon.stringify t ▸ """
            foofoo
                     barbarbar   1
                     foo         2"""
        
        t = { 
            foobar: { 
                barfoo: 1
                bar: 2 }
            foo: { 
                bar: 1 } }
        
        noon.stringify t ▸ """
            foo
                     bar  1
            foobar   
                     barfoo  1
                     bar     2"""
        