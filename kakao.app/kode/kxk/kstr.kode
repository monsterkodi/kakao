str.rstrip = (s, cs=' ') ->

    s ?= ''
    s = s[0...s.length-1] while s[-1] in cs
    s

str.lstrip = (s, cs=' ') ->

    s ?= ''
    s = s[1..] while s[0] in cs
    s

str.strip = (s, cs=' ') -> str.rstrip str.lstrip(s,cs), cs

