export (opt={}) ○->

    new Promise (resolve, reject) ->

        opt = shell:true
        child_process.exec 'git rev-parse --show-toplevel', opt, (err, gitDir, stderr) -> 

            if err
                error 'ERROR' err
                ⮐ reject()
                
            else if valid gitDir

                gitDir = trim gitDir,' \n'
                log 'gitDir' gitDir
                
                child_process.exec '/usr/bin/git status --porcelain', opt, (err, status, stderr) -> 
                    
                    if err
                        error 'ERROR' err
                        ⮐ reject()

                    else if valid status

                        report parseStatus(status,gitDir), opt

                        ⮐ resolve()
                        