    @extendLineRangesFromPositionToPosition: lines rngs start pos ->

        if empty rngs ➜ ⮐  [belt.rangeFromStartToEnd(start pos)]

        newRngs = rngs #.asMutable()
        
        rng = belt.rangeInRangesTouchingPos newRngs start
        if rng
            if belt.isPosAfterRange pos rng
                rng[2] = pos[0]
                rng[3] = pos[1]
            elif belt.isPosBeforeRange pos rng
                rng[0] = pos[0]
                rng[1] = pos[1]
        else
            newRngs∙push belt.rangeFromStartToEnd(start pos)

        newRngs
    
    @extendLineRangesByMovingPositionsInDirection: lines rngs posl dir opt ->
        
        newRngs = rngs #.asMutable()
        newPosl = posl #.asMutable()
        
        for pi pos in ipairs newPosl
            
            line = lines[pos[2]]
            rng = [pos[1] pos[2] pos[1] pos[2]]
            newRngs∙push rng
            nc = 0
            switch dir
                'left'  
                'right'     ➜ nc = belt.numCharsFromPosToWordOrPunctInDirection(lines pos dir opt); pos[1] += nc
                'up'        ➜ pos[2] -= 1
                'down'      ➜ pos[2] += 1
                'eol'       ➜ pos[1] = line.len
                'bol'       ➜ pos[1] = 0
                'bof'       ➜ pos[1] = 0; pos[2] = 0
                'eof'       ➜ pos[2] = lines.len-1; pos[1] = lines[lines.len-1].len

                'ind_bol'   ➜ ind = belt.numIndent(line); pos[1] = if pos[1] > ind ➜ ind ➜ 0
                'ind_eol'   ➜ ind = belt.numIndent(line); pos[1] = if pos[1] < ind ➜ ind ➜ line.len
                
            switch dir
                'left'      ➜ rng[1] = rng[1]+nc
                'right'     ➜ rng[3] = rng[3]+nc
                'up'        ➜ rng[2] = max 0 rng[2]-1
                'down'      ➜ rng[3] = min lines.len-1 rng[3]+1
                'eol'       ➜ rng[3] = Infinity
                'bol'       ➜ rng[1] = 0
                'bof'       ➜ rng[2] = 0; rng[1] = 0
                'eof'       ➜ rng[3] = lines.len-1; rng[3] = lines[lines.len-1].len

                'ind_bol'   ➜ ind = belt.numIndent(line); rng[1] = if rng[1] > ind ➜ ind ➜ 0
                'ind_eol'   ➜ ind = belt.numIndent(line); rng[3] = if rng[3] < ind ➜ ind ➜ line.len
            
            if rng[2] < lines.len
                rng[1] = clamp 0 lines[rng[2]].len rng[1] 
            if rng[3] < lines.len
                rng[3] = clamp 0 lines[rng[3]].len rng[3] 
        
        (newRngs newPosl)
        
