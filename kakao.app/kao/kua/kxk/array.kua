class array

    @: ... ->
    
        for v in ...
            @insert v

    $: -> noon(@)

    str: -> $@
    len: -> @len
    
    @num: a -> 
        if type(a) == "table"
            if
                a.len > 0 
                    ⮐  a.len 
                type(a["len"]) == "function"
                    ⮐  a∙len()
        0
    
    @from: a -> 
        
        if a.class == immutable
            ⮐  a∙arr()
        array unpack(a)
        
    @str:  a -> noon(a)
    arr:  -> array.from @
    each: -> i=0; -> i+=1; (@[i] i)
    @each: a -> i=0; -> i+=1; (a[i] i)
    
    join: c="" -> @concat c
    
    map: f ->
    
        t = @.class()
        for i v in @
            t[i] = f v
        t
        
    @map: a f ->
    
        t = []
        n = array.num a
        if n > 0 
            for i in 1..n
                t[i] = f(a[i])
        t
    
    filter: f ->
    
        t = @.class()
        for i v in @
            if f v i
                t∙push v
        t
        
    shift: -> 

        if @len > 0 ➜ @remove 1
        
    pop: -> 

        if @len > 0 ➜ @remove @len
        
    push: ... -> 

        for v in ...
            @[@len+1] = v
        @
        
    unshift: ... -> 

        l = select("#", ...)        
        if l > 0                    
            for i in l..1
                v = select(i, ...)     
                @insert 1 v
        @
        
    splice: (i n ...) ->
        
        if n > 0
            for d in 1..n
                @remove i
        a = @.class(...)
        while a.len > 0
            @insert i a∙pop()
        @
        
    slice: first last ->

        s = @.class()
            
        ⮐  s if first > @len
        if last == nil ➜ last = @len
        else last = min @len last
        ⮐  s if last < 1 or last < first
        for i in first...last+1
            s∙push @[i]
        s
        
    @slice: a first last ->
    
        s = []
        if a.class and a.class != immutable
            s = a.class()

        ⮐  s if first > a∙len()
        if last == nil ➜ last = a∙len()
        else last = min a∙len() last
        ⮐  s if last < 1 or last < first
        for i in first...last+1
            s∙push a[i]
        s
        
    keydict: key ->

        t = {}
        for i v in @
