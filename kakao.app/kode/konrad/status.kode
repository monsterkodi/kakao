pretty = 
    path:   f p c=klor.yellow -> p.split('/').map((n) -> c(n)).join klor.dim(c('/'))
    ext:      e c=klor.yellow -> e.length ? klor.dim(c('.')) + c(e) : ''
    file:     f c=klor.yellow -> "#{klor.bold(c(slash.name(f)))}#{pretty.ext(slash.ext(f),c)}"
    filePath: p c=klor.yellow ->

        if valid slash.dir p
            return "#{pretty.path(slash.dir(p),c)}#{pretty.path('/',c)}#{pretty.file(slash.file(p),c)}"
        else
            return "#{pretty.file(slash.file(p),c)}"

    ranges: rgs ->

        result = ''
        plain = ''
        for index in rgs[0...ranges.length]
            rng = rgs[index]
            while plain.length < rng.start
                plain += ' '
                result += ' '

            cfunc = =>

                switch rng.clss

                    'text' ➜ ⮐ (s) -> klor.white(klor.dim(s))
    
                    'comment'
                    'text require string'  ➜ ⮐ (s) -> klor.gray(klor.bold(s))
    
                    'punct comment'
                    'punct'
                    'punct minor'
                    'punct require'
                    'keyword require' ➜ ⮐ (s) -> klor.gray(klor.dim(s))
    
                    'function'
                    'function call'
                    'string single'
                    'string double'
                    'dir text'
                    'property'
                    'function argument' ➜ ⮐ (s) -> klor.green(klor.bold(s))
    
                    'punct function call'
                    'punct dir'
                    'punct string single'
                    'punct string double'
                    'punct string double triple' ➜ ⮐ (s) -> klor.green(klor.dim(s))
    
                    'obj'
                    'class'
                    'git file'
                    'method class'
                    'dictionary key'
                    'module' ➜ ⮐ (s) -> klor.yellow(klor.bold(s))
    
                    'punct git'
                    'git ext'
                    'punct method class'
                    'punct dictionary'
                    'punct function' ➜ ⮐ (s) -> klor.yellow(klor.dim(s))
    
                    'number'
                    'keyword'
                    'url domain' ➜ ⮐ (s) -> klor.blue(klor.bold(s))
    
                    'require'
                    'punct property' ➜ ⮐ (s) -> klor.green(klor.dim(s))
    
                    'punct semver'
                    'url protocol'
                    'punct url' ➜ ⮐ (s) -> klor.magenta(s)
    
                    'semver'
                    'dir url tld'
                    'punct url tld' ➜ ⮐ (s) -> klor.magenta(klor.bold(s))
    
                    'punct function tail ligature'
                    'punct function async'
                    'punct keyword'
                    'punct await'
                    'punct keyword return' ➜ ⮐ (s) -> klor.b5(klor.bold(s))
    
                    'nil' ➜ ⮐ (s) -> klor.r2(klor.bold(s))
    
                     ➜ 
                         ⮐ (s) -> log('s',s,rng.clss); klor.white(klor.bold(s))

            plain  += rng.match
            result += cfunc rng.match

        result

