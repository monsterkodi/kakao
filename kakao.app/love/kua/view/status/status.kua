    layout: x y w h ->
        
        view.layout @ x y w h
        
        cw = math.floor w/2
        
        x += @gutter+1
        
        @crumbs‚àôlayout x y cw 1                     # ùúèùñçùöíùñò ‚üÖ‚óØ‚äöùõãùñò œùùöíùñòùñçùõæ 
        @crumbs‚àôlayout x y @crumbs.rounded.length 1 # ‚üíùñçùõæ ùúè‚üí‚äö ‚üÖùïíùõæ‚óØùìäùúèùñò?
    
        x += @crumbs.rounded.length
        
        @statusfile‚àôlayout x y @statusfile.rounded.length 1
        
        x += @statusfile.rounded.length
        
        @filepos‚àôlayout x y @filepos.rounded.length 1
                
