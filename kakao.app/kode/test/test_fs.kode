    # 000   000  000  000   000  000      000       000     000     
    # 0000000    000  000   000  0000000  000  0000000      000     

    ▸ dirlist
         
        process.chdir __dirname
        fs.list(__dirname).then (items) ->
            items.map((i) -> i.path) ▸ (a) -> slash.path(__filename) in a
        
