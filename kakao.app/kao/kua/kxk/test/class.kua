
use kxk/kxk

class A
    a: 0
    @: a b ->
        @a = a
        @b = b

class FunInc
    m: 0
    fun: m -> 
        @m = m
    inc: a1 ->
        @fun @m + a1

class Print
    m: "hello"
    $: -> @m

▸ class

    ▸ simple
        
        a = A(1 2)
        a.a ▸ 1
        a.b ▸ 2
        
    ▸ inc    
    
        f = FunInc()
        f:inc 2
        f:inc 2
        
        f.m ▸ 4
        
    ▸ prnt
    
        p = Print()
        string.format("%s" p) ▸ "hello"
        p.m = "howdy"
        string.format("%s" p) ▸ "howdy"
    
    