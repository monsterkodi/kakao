    @addLinesBelowPositionsToRanges: lines posl rngs ->
    
        newp = []
        newr = rngs #.asMutable()
    
        addLineAtIndex = c i ->

            range = belt.rangeOfLine lines i
            if belt.isEmptyRange range
                range[1] += 1 
            newr∙push range
            newp∙push belt.endOfRange(range)
            
        for c in posl
            if not belt.rangesContainLine(rngs c[1])
                addLineAtIndex c c[1]
            elif c[1] < lines.len-1
                addLineAtIndex c c[1]+1 

        ⮐  (posl rngs) if empty newp
        
        (newp newr)
    
