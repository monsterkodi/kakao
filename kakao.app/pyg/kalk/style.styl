#main
    display             flex
    flex-direction      column
    overflow            hidden

#sheet
    flex                1 1 0
    overflow            auto
    display             none
    flex-direction      row
    padding             0
    margin-left         6px
    margin-right        6px
    margin-bottom       8px
    
    border-top-left-radius      12px
    border-top-right-radius     12px
    border-bottom-left-radius   12px
    border-bottom-right-radius  12px

#keys
    border-bottom-left-radius   12px
    border-bottom-right-radius  12px

.sheet-calc 
    padding                     6px
    flex      1 1 0  

.sheet-result
    padding                     6px
    flex      1 1 0               
    
// .sheet-calc  
// .sheet-result
    // margin-bottom  8px

.sheet-line
    white-space         nowrap
    height              26px
    text-align          right
    font-size           22px
    -webkit-user-select auto
    padding-right       10px
    display             block
    margin-left         auto
    width               94%
    overflow            hidden
    &.result
        text-align      left
    
